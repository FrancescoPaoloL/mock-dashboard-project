<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Welcome, <%= data.user.name %></h1>
      <p>Email: <%= data.user.email %></p>
    </header>

    <section class="stats">
      <h2>Statistics</h2>
      <ul>
        <li>Posts: <%= data.statistics.posts %></li>
        <li>Followers: <%= data.statistics.followers %></li>
        <li>Following: <%= data.statistics.following %></li>
      </ul>
    </section>

    <section class="activities">
      <h2>Recent Activities</h2>
      <ul>
        <% data.recentActivities.forEach(activity => { %>
          <li><%= activity.activity %> - <%= activity.time %></li>
        <% }) %>
      </ul>
    </section>

    <section class="fraud-transactions">
      <h2>Fraudulent Transactions</h2>
      <table>
        <thead>
          <tr>
            <th>Transaction ID</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% data.fraudTransactions.forEach(transaction => { %>
            <tr class="<%= transaction.status.toLowerCase() %>">
              <td><%= transaction.transactionId %></td>
              <td>$<%= transaction.amount %></td>
              <td><%= transaction.status %></td>
              <td><%= transaction.date %></td>
              <td><%= transaction.description %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>
